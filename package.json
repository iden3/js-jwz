{
  "name": "@iden3/js-jwz",
  "version": "0.1.3",
  "description": "JS implementation of JWZ",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "source": "./src/index.ts",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testTimeout": 20000,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint --fix --ext .js,.ts src/**",
    "build": "npm run clean && npm run build:esm && npm run build:umd && npm run build:tsc",
    "build:esm": "node ./scripts/esm.config.js",
    "build:umd": "node ./scripts/umd.config.js",
    "build:tsc": "tsc --module commonjs",
    "clean": "rimraf ./dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iden3/js-jwz.git"
  },
  "author": "iden3",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/iden3/js-jwz/issues"
  },
  "homepage": "https://github.com/iden3/js-jwz#readme",
  "dependencies": {
    "base58-js": "^1.0.0",
    "cross-sha256": "^1.2.0",
    "rfc4648": "^1.5.2",
    "@iden3/js-crypto": "file:./iden3-js-crypto-0.0.1.tgz",
    "@iden3/js-iden3-core": "file:./iden3-js-iden3-core-0.0.1.tgz",
    "@iden3/js-merkletree": "file:./iden3-js-merkletree-0.0.0.tgz",
    "snarkjs": "^0.4.19"
  },
  "browserslist": {
    "production": [
      "chrome >= 67",
      "edge >= 79",
      "firefox >= 68",
      "opera >= 54",
      "safari >= 14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.15.15",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
