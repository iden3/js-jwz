{
  "name": "@iden3/js-jwz",
  "version": "1.0.0-beta.2",
  "description": "JS implementation of JWZ",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "source": "./src/index.ts",
  "esm:esbuild": "dist/esm_esbuild/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:umd && npm run build:esm:esbuild && npm run build:tsc",
    "build:esm:esbuild": "node ./scripts/esm.config.js",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:umd": "node ./scripts/umd.config.js",
    "build:tsc": "tsc --module commonjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint --fix --ext .js,.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iden3/js-jwz.git"
  },
  "author": "iden3",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/iden3/js-jwz/issues"
  },
  "homepage": "https://github.com/iden3/js-jwz#readme",
  "dependencies": {
    "base58-js": "^1.0.0",
    "cross-sha256": "^1.2.0",
    "rfc4648": "^1.5.2",
    "@iden3/js-crypto": "1.0.0-beta.0",
    "@iden3/js-iden3-core": "1.0.0-beta.0",
    "@iden3/js-merkletree": "1.0.0-beta.0",
    "snarkjs": "0.5.0",
    "ffjavascript": "^0.2.57"

  },
  "browserslist": {
    "production": [
      "chrome >= 67",
      "edge >= 79",
      "firefox >= 68",
      "opera >= 54",
      "safari >= 14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.15.15",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.2.2",
    "prettier": "^2.3.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
