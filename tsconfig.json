{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
